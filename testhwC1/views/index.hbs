<script>
  // Get the radio buttons and the submit button
  const radioButtons = document.querySelectorAll('input[type="radio"]');
  const submitButtons = document.querySelectorAll('button[name="submit-action"]');
  const hiddenInput = document.getElementById('submit-source');
  
  // Add an event listener to each radio button
  radioButtons.forEach(radioButton => {
    radioButton.addEventListener('change', () => {
      // Automatically submit the form when a radio button is selected
      hiddenInput.value = 'auto';
      document.getElementById('form').submit();
    });
  });

  // Add an event listener to the submit buttons to set the value of the hidden input field
  submitButtons.forEach(submitButton => {
    submitButton.addEventListener('click', event => {
      hiddenInput.value = event.target.value;
    });
  });
</script>
